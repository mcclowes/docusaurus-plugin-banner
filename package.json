{
  "name": "docusaurus-plugin-banner",
  "version": "0.2.0",
  "description": "A customizable dismissable banner plugin for Docusaurus sites with localStorage persistence.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "example:start": "npm --prefix examples/docusaurus-v3 run start",
    "example:build": "npm --prefix examples/docusaurus-v3 run build",
    "example:serve": "npm --prefix examples/docusaurus-v3 run serve",
    "example:clear": "npm --prefix examples/docusaurus-v3 run clear",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "peerDependencies": {
    "@docusaurus/types": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/types": "^3.0.0",
    "@playwright/test": "^1.42.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "docusaurus",
    "plugin",
    "banner",
    "dismissable",
    "notification",
    "localstorage",
    "typescript"
  ],
  "author": "mcclowes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcclowes/docusaurus-plugin-banner.git"
  },
  "bugs": {
    "url": "https://github.com/mcclowes/docusaurus-plugin-banner/issues"
  },
  "homepage": "https://github.com/mcclowes/docusaurus-plugin-banner#readme",
  "engines": {
    "node": ">=18.0"
  }
}
